{
    "AuxComponent": {
        "prefix": "auxc",
        "body": [
            "apiVersion: opencontext.com/v1alpha1",
            "kind: AuxComponent",
            "metadata:",
            "  name: $1",
            "  title: $2",
            "  description: $3",
            "  links: [",
            "    # add links with `oclink`",
            "  ]",
            "  tags: [",
            "  ]",
            "spec:",
            "  type: ${4|document,website,tool,infocard,other|}",
            "  // otherType: ",
            "  lifecycle: $5",
            "  owner: [$6]",
            "  platform: $7",
            "  uri: $8",
            "---"
        ]
    },
    "CodeComponent": {
        "prefix": "codec",
        "body": [
            "apiVersion: opencontext.com/v1alpha1",
            "kind: CodeComponent",
            "metadata:",
            "  name: $1",
            "  title: $2",
            "  description: $3",
            "  links: [",
            "    # add links with `oclink`",
            "  ]",
            "  tags: [",
            "  ]",
            "spec:",
            "  type: ${4|repository,codepath,library,package,lambda,utility,other|}",
            "  // otherType: ",
            "  lifecycle: $5",
            "  owner: [$6]",
            "  platform: $7",
            "  uri: $8",
            "---"
        ]
    },
    "PlatformComponent": {
        "prefix": "platformc",
        "body": [
            "apiVersion: opencontext.com/v1alpha1",
            "kind: PlatformComponent",
            "metadata:",
            "  name: $1",
            "  title: $2",
            "  description: $3",
            "  links: [",
            "    # add links with `oclink`",
            "  ]",
            "  tags: [",
            "  ]",
            "spec:",
            "  type: ${4}",
            "  lifecycle: $5",
            "  owner: [$6]",
            "  platform: $7",
            "  uri: $8",
            "  sla: $9",
            "  datacenter: $10",
            "---"
        ]
    },
    "Datacenter": {
        "prefix": "datac",
        "body": [
            "apiVersion: opencontext.com/v1alpha1",
            "kind: Datacenter",
            "metadata:",
            "  name: $1",
            "  title: $2",
            "  description: $3",
            "  links: [",
            "    # add links with `oclink`",
            "  ]",
            "  tags: [",
            "  ]",
            "spec:",
            "  type: ${4|cloud,on-premise,other|}",
            "  // otherType: ",
            "  owner: [$6]",
            "  region: $7",
            "---"
        ]
    },
    "Team": {
        "prefix": "octeam",
        "body": [
            "apiVersion: opencontext.com/v1alpha1",
            "kind: Team",
            "metadata:",
            "  name: $1",
            "  description: $2",
            "  links: [",
            "   # add links with `oclink`",
            "  ]",
            "spec:",
            "  type: ${3:department}",
            "  profile:",
            "    displayName: $4",
            "    email: $5",
            "  parent: $6",
            "  children: [$7]",
            "  members: [$8]",
            "---"
        ]
    },
    "Person": {
        "prefix": "ocperson",
        "body": [
            "apiVersion: opencontext.com/v1alpha1",
            "kind: Person",
            "metadata:",
            "  name: $1",
            "  links: [",
            "   # add links with `oclink`",
            "  ]",
            "spec:",
            "  profile:",
            "    displayName: $3",
            "    displayEmail: $4",
            "    role: $5",
            "  memberOf: [$6]",
            "---"
        ]
    },
    "User": {
        "prefix": "ocuser",
        "body": [
            "apiVersion: opencontext.com/v1alpha1",
            "kind: User",
            "metadata:",
            "  name: $1",
            "  annotations:",
            "   # 'github.com/user-login': $2",
            "spec:",
            "  primaryEmail: $3",
            "  profile:",
            "    displayName: $4",
            "    displayEmail: $5",
            "---"
        ]
    },
    "Link": {
        "prefix": "oclink",
        "body": [
            "- url: $1",
            "  title: $2",
            "  icon: ${3|chat,dashboard,docs,email,github,team,help,website|}"
        ]
    }
}